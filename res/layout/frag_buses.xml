<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:a="http://schemas.android.com/apk/res/android"
    a:orientation="vertical"
    a:layout_width="match_parent"
    a:layout_height="match_parent" >

    <LinearLayout
        a:orientation="horizontal"
        a:layout_width="match_parent"
        a:layout_height="wrap_content" >

        <TextView
            a:layout_width="0dp"
            a:layout_height="wrap_content"
            a:layout_weight="1"
            a:text="Route:" />

        <Spinner
            a:id="@+id/route_spinner"
            a:layout_width="0dp"
            a:layout_weight="2"
            a:layout_height="wrap_content"
            a:entries="@array/bus_route_array" />

        <Button
            a:id="@+id/view_bus_map_button"
            a:layout_width="0dp"
            a:layout_weight="2"
            a:layout_height="wrap_content"
            a:text="View Map" />

    </LinearLayout>

    <View
        a:layout_width="match_parent"
        a:layout_height="2dip"
        a:background="@color/blue"
        a:layout_margin="3dip"/>

    <!-- next bus from chosen busstop -->
    <LinearLayout
        a:orientation="horizontal"
        a:layout_width="match_parent"
        a:layout_height="wrap_content" >

        <TextView
            a:layout_width="0dp"
            a:layout_weight="2"
            a:layout_height="wrap_content"
            a:text="Next 3 buses from:" />

        <Spinner
            a:id="@+id/busstop_spinner"
            a:layout_width="0dp"
            a:layout_weight="3"
            a:layout_height="wrap_content"
            a:entries="@array/u10_stops" />

    </LinearLayout>

    <!-- next 3 buses from the busstop_spinner stop above -->
    <LinearLayout
        a:orientation="horizontal"
        a:layout_width="match_parent"
        a:layout_height="wrap_content" >

        <TextView
            a:id="@+id/time1"
            a:layout_width="0dp"
            a:layout_weight="1"
            a:layout_height="wrap_content"
            a:gravity="center"
            a:text="0000" />
        <TextView
            a:id="@+id/time2"
            a:layout_width="0dp"
            a:layout_weight="1"
            a:layout_height="wrap_content"
            a:gravity="center"
            a:text="1111" />
        <TextView
            a:id="@+id/time3"
            a:layout_width="0dp"
            a:layout_weight="1"
            a:layout_height="wrap_content"
            a:gravity="center"
            a:text="2222" />
    </LinearLayout>

    <View
        a:layout_width="match_parent"
        a:layout_height="2dip"
        a:background="@color/blue"
        a:layout_marginTop="10dip"
        a:layout_marginBottom="10dip" />

    <LinearLayout
        a:orientation="horizontal"
        a:layout_width="match_parent"
        a:layout_height="wrap_content" >

        <TableLayout
            a:id="@+id/times_table"
            a:layout_width="0dp"
            a:layout_weight="1"
            a:layout_height="match_parent" />

        <ScrollView
            a:layout_width="match_parent"
            a:layout_height="match_parent" >
            <HorizontalScrollView
                a:layout_width="match_parent"
                a:layout_height="wrap_content" >

                <TableLayout
                    a:id="@+id/times"
                    a:layout_width="0dp"
                    a:layout_weight="2"
                    a:layout_height="wrap_content" >
                </TableLayout>
            </HorizontalScrollView>
        </ScrollView>

    </LinearLayout>
</LinearLayout>
