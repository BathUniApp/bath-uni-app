<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:a="http://schemas.android.com/apk/res/android"
    a:orientation="vertical"
    a:layout_width="match_parent"
    a:layout_height="match_parent"
    a:background="@drawable/cat_pokoachondria">

    <LinearLayout
        a:orientation="horizontal"
        a:layout_width="match_parent"
        a:layout_height="wrap_content" >

        <TextView
            a:layout_width="0dp"
            a:layout_height="wrap_content"
            a:layout_weight="1"
            a:text="Route:" />

        <Spinner
            a:id="@+id/route_spinner"
            a:layout_width="0dp"
            a:layout_weight="2"
            a:layout_height="wrap_content"
            a:entries="@array/bus_route_array" />

        <Button
            a:id="@+id/view_bus_map_button"
            a:layout_width="0dp"
            a:layout_weight="2"
            a:layout_height="wrap_content"
            a:text="View Map" />

    </LinearLayout>

    <LinearLayout
        a:orientation="horizontal"
        a:layout_width="match_parent"
        a:layout_height="wrap_content" >

        <TextView
            a:layout_width="0dp"
            a:layout_weight="1"
            a:layout_height="wrap_content"
            a:text="Next bus from:" />

        <Spinner
            a:layout_width="0dp"
            a:layout_weight="2"
            a:layout_height="wrap_content"
            a:entries="@array/u10_stops" />

    </LinearLayout>

    <LinearLayout
        a:orientation="horizontal"
        a:layout_width="match_parent"
        a:layout_height="wrap_content" >

        <TextView
            a:layout_width="0dp"
            a:layout_weight="1"
            a:layout_height="wrap_content"
            a:gravity="center"
            a:text="0000" />
       <TextView
            a:layout_width="0dp"
            a:layout_weight="1"
            a:layout_height="wrap_content"
            a:gravity="center"
            a:text="1111" />
        <TextView
            a:layout_width="0dp"
            a:layout_weight="1"
            a:layout_height="wrap_content"
            a:gravity="center"
            a:text="2222" />
    </LinearLayout>

    <GridView
        a:layout_width="match_parent"
        a:layout_height="wrap_content"
        a:columnWidth="90dp"
        a:numColumns="10"
        a:verticalSpacing="10dp"
        a:horizontalSpacing="10dp"
        a:stretchMode="columnWidth"
        a:background="@color/white" >

    </GridView>

</LinearLayout>
